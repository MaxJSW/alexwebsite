<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%= breed.name %> - Spirit of Freedom Kennel</title>
        <meta name="description" content="Découvrez le <%= breed.name %> au sein du Spirit of Freedom Kennel : origines, caractère, standard et morphologie. Reproducteurs sélectionnés, chiots ABKC et FBKC disponibles à Codognan, dans le Gard.">
        <meta name="keywords" content="<%= breed.name.toLowerCase() %>, <%= breed.name.toLowerCase() %> élevage, <%= breed.name.toLowerCase() %> caractère, <%= breed.name.toLowerCase() %> reproducteurs, <%= breed.name.toLowerCase() %> chiots, élevage <%= breed.name.toLowerCase() %> gard, spirit of freedom kennel, <%= breed.name.toLowerCase() %> ABKC FBKC">
        <meta name="author" content="Spirit of Freedom Kennel">
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
        <meta name="googlebot" content="index, follow">
        <link rel="canonical" href="https://spiritoffreedomkennel.com/races/<%= breed.slug %>">
        <meta name="language" content="fr">
        <meta name="geo.region" content="FR-30">
        <meta name="geo.placename" content="Codognan, Gard">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="Spirit of Freedom Kennel">
        <meta property="og:title" content="<%= breed.name %> - Spirit of Freedom Kennel">
        <meta property="og:description" content="Découvrez le <%= breed.name %> au Spirit of Freedom Kennel : reproducteurs d'exception, chiots ABKC et FBKC disponibles à Codognan.">
        <meta property="og:url" content="https://spiritoffreedomkennel.com/races/<%= breed.slug %>">
        <meta property="og:image" content="https://spiritoffreedomkennel.com<%= breed.firstImage ? breed.firstImage.path : '/img/og/og-image.webp' %>">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:image:alt" content="<%= breed.name %> - Spirit of Freedom Kennel">
        <meta property="og:locale" content="fr_FR">
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="<%= breed.name %> - Spirit of Freedom Kennel">
        <meta name="twitter:description" content="Découvrez le <%= breed.name %> au Spirit of Freedom Kennel : reproducteurs d'exception et chiots ABKC et FBKC disponibles.">
        <meta name="twitter:image" content="https://spiritoffreedomkennel.com<%= breed.firstImage ? breed.firstImage.path : '/img/og/og-image.webp' %>">
        <meta name="twitter:image:alt" content="<%= breed.name %> - Spirit of Freedom Kennel">
        <%- include('../front/partials/head-meta-base.ejs') %>
        <%- include('../front/partials/head-fonts-libs.ejs') %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css">
        <link rel="stylesheet" href="/front/css/navbar.css">
        <link rel="stylesheet" href="/front/css/races.css">
    </head>
    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %> 
        <main style="padding-top: 70px;">
            <section class="breed-hero-section">
                <div class="breed-hero-overlay"></div>
                <% if (breed.firstImage) { %>
                <div class="breed-hero-bg" style="background-image: url('<%= breed.firstImage.path %>')"></div>
                <% } else { %>
                <div class="breed-hero-bg" style="background-image: url('/img/index/img_page_accueil.webp')"></div>
                <% } %>
                <div class="container">
                    <div class="breed-hero-content">
                        <nav class="breed-breadcrumb">
                            <a href="/">Accueil</a>
                            <i class="fas fa-chevron-right"></i>
                            <a href="/races">Nos Races</a>
                            <i class="fas fa-chevron-right"></i>
                            <span><%= breed.name %></span>
                        </nav>
                        <h1 class="breed-hero-title"><%= breed.name %></h1>
                        <div class="gold-divider my-3"></div>
                        <nav class="breed-hero-nav">
                            <% if (breedParagraphs && breedParagraphs.length > 0) { %>
                            <a href="#description" class="breed-nav-btn">
                            <i class="fas fa-book me-2"></i>Description
                            </a>
                            <% } %>
                            <% if (breedImages && breedImages.length > 0) { %>
                            <a href="#photos" class="breed-nav-btn">
                            <i class="fas fa-images me-2"></i>Photos
                            </a>
                            <% } %>
                            <% if (breedAnimals && breedAnimals.length > 0) { %>
                            <a href="#reproducteurs" class="breed-nav-btn">
                            <i class="fas fa-dog me-2"></i>Reproducteurs
                            </a>
                            <% } %>
                            <% if (breedPuppies && breedPuppies.length > 0) { %>
                            <a href="#chiots" class="breed-nav-btn">
                            <i class="fas fa-paw me-2"></i>Chiots
                            </a>
                            <% } %>
                        </nav>
                    </div>
                </div>
            </section>
            <% if (breed.description) { %>
            <section class="breed-intro-section">
                <div class="container">
                    <div class="breed-intro-box" data-aos="fade-up">
                        <div class="breed-intro-letter">
                            <%= breed.name[0] %>
                        </div>
                        <div class="breed-intro-content">
                            <p class="breed-intro-text"><%= breed.description %></p>
                            <div class="breed-intro-footer">
                                <div class="gold-divider"></div>
                                <span class="breed-intro-name"><%= breed.name %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <% } %>
            <% if (breedParagraphs && breedParagraphs.length > 0) { %>
            <section id="description" class="breed-content-section">
                <div class="container">
                    <div class="breed-accordion" data-aos="fade-up">
                        <% breedParagraphs.forEach((paragraph, index) => { %>
                        <div class="breed-accordion-item <%= index === 0 ? 'active' : '' %>">
                            <button class="breed-accordion-header">
                                <div class="breed-accordion-left">
                                    <span class="breed-accordion-number">0<%= index + 1 %></span>
                                    <% if (paragraph.title) { %>
                                    <span class="breed-accordion-title"><%= paragraph.title %></span>
                                    <% } else { %>
                                    <span class="breed-accordion-title">Section <%= index + 1 %></span>
                                    <% } %>
                                </div>
                                <div class="breed-accordion-icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                            </button>
                            <div class="breed-accordion-body">
                                <div class="breed-content-text">
                                    <%- paragraph.content %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </section>
            <% } %>
            <% if (breedImages && breedImages.length > 0) { %>
            <section id="photos" class="breed-gallery-section">
                <div class="container">
                    <div class="breed-section-header" data-aos="fade-up">
                        <div class="breed-section-header-left">
                            <span class="label-tag">Galerie</span>
                            <h2 class="breed-section-title">Photos <span class="text-gold"><%= breed.name %></span></h2>
                        </div>
                        <div class="breed-gallery-counter">
                            <span class="counter-number"><%= breedImages.length %></span>
                            <span class="counter-label">photos</span>
                        </div>
                    </div>
                    <div class="breed-gallery-grid">
                        <% breedImages.forEach((image, index) => { %>
                        <div class="breed-gallery-item" data-aos="fade-up" data-aos-delay="<%= index * 40 %>">
                            <a href="<%= image.path %>"
                                data-fancybox="gallery-<%= breed.slug %>"
                                data-caption="<%= image.alt || breed.name %>">
                                <img src="<%= image.path %>"
                                    alt="<%= image.alt || breed.name %>"
                                    onerror="this.onerror=null; this.src='/img/placeholder-dog.jpg';">
                                <div class="breed-gallery-hover">
                                    <span class="gallery-item-number">0<%= index + 1 %></span>
                                    <i class="fas fa-expand"></i>
                                </div>
                            </a>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </section>
            <% } %>
            <% if (breedAnimals && breedAnimals.length > 0) { %>
            <section id="reproducteurs" class="breed-animals-section">
                <div class="container">
                    <div class="breed-section-header" data-aos="fade-up">
                        <div class="breed-section-header-left">
                            <span class="label-tag">Reproducteurs</span>
                            <h2 class="breed-section-title">Nos <span class="text-gold"><%= breed.name %></span></h2>
                        </div>
                        <div class="breed-gallery-counter">
                            <span class="counter-number"><%= breedAnimals.length %></span>
                            <span class="counter-label">chiens</span>
                        </div>
                    </div>
                    <div class="row g-4">
                        <% breedAnimals.forEach((animal, index) => { %>
                        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <div class="dog-card">
                                <div class="dog-card-image">
                                    <img src="<%= animal.image.path %>"
                                        alt="<%= animal.image.alt || animal.name %>"
                                        onerror="this.onerror=null; this.src='/img/placeholder-dog.jpg';">
                                    <div class="dog-gender-badge <%= animal.gender === 'Mâle' ? 'male' : 'female' %>">
                                        <i class="fas fa-<%= animal.gender === 'Mâle' ? 'mars' : 'venus' %>"></i>
                                    </div>
                                    <div class="dog-card-overlay">
                                        <a href="/chiens/<%= breed.slug %>/<%= animal.slug %>" class="btn-view-dog">
                                        <i class="fas fa-eye me-2"></i>Voir la fiche
                                        </a>
                                    </div>
                                </div>
                                <div class="dog-card-body">
                                    <div class="dog-card-top-bar"></div>
                                    <h4 class="dog-name"><%= animal.name %></h4>
                                    <div class="dog-info">
                                        <div class="dog-info-item">
                                            <i class="fas fa-paw"></i>
                                            <span><%= animal.breed_name %></span>
                                        </div>
                                        <% if (animal.breed_type) { %>
                                        <div class="dog-info-item">
                                            <i class="fas fa-tag"></i>
                                            <span><%= animal.breed_type %></span>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </section>
            <% } %>
            <% if (breedPuppies && breedPuppies.length > 0) { %>
            <section id="chiots" class="breed-puppies-section">
                <div class="container">
                    <div class="breed-section-header" data-aos="fade-up">
                        <div class="breed-section-header-left">
                            <span class="label-tag">Disponibles</span>
                            <h2 class="breed-section-title">Chiots <span class="text-gold"><%= breed.name %></span></h2>
                        </div>
                        <div class="breed-gallery-counter">
                            <span class="counter-number"><%= breedPuppies.length %></span>
                            <span class="counter-label">chiots</span>
                        </div>
                    </div>
                    <div class="row g-4">
                        <% breedPuppies.forEach((puppy, index) => { %>
                        <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <div class="puppy-card">
                                <div class="puppy-card-image">
                                    <img src="<%= puppy.image.path %>"
                                        alt="<%= puppy.image.alt || puppy.name %>"
                                        onerror="this.onerror=null; this.src='/img/placeholder-puppy.jpg';">
                                    <div class="puppy-status-badge available">
                                        <i class="fas fa-calendar-check me-1"></i>Disponible
                                    </div>
                                    <div class="puppy-gender-badge <%= puppy.gender === 'Mâle' ? 'male' : 'female' %>">
                                        <i class="fas fa-<%= puppy.gender === 'Mâle' ? 'mars' : 'venus' %>"></i>
                                    </div>
                                    <div class="puppy-card-overlay">
                                        <a href="/chiots/a-vendre/<%= puppy.breed_slug %>/<%= puppy.slug %>" class="btn-view-puppy">
                                        <i class="fas fa-eye me-2"></i>Voir le chiot
                                        </a>
                                    </div>
                                </div>
                                <div class="puppy-card-body">
                                    <div class="puppy-card-header">
                                        <h4 class="puppy-name"><%= puppy.name %></h4>
                                    </div>
                                    <div class="puppy-info">
                                        <div class="puppy-info-item">
                                            <i class="fas fa-paw"></i>
                                            <span><%= puppy.breed_name %></span>
                                        </div>
                                        <% if (puppy.breed_type) { %>
                                        <div class="puppy-info-item">
                                            <i class="fas fa-tag"></i>
                                            <span><%= puppy.breed_type %></span>
                                        </div>
                                        <% } %>
                                    </div>
                                    <a href="/chiots/a-vendre/<%= puppy.breed_slug %>/<%= puppy.slug %>" class="btn-puppy-cta">
                                    Voir la fiche <i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="text-center mt-4" data-aos="fade-up">
                        <a href="/chiots/a-vendre/<%= breed.slug %>" class="btn-see-all-dogs">
                        Voir tous nos chiots <%= breed.name %>
                        <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </section>
            <% } %>
        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script> 
        <script src="/front/js/header.js"></script><script src="/front/js/aos.js"></script><script src="/front/js/fancybox.js"></script>
        <%- include('./partials/googleAnalytics') %>
                <script>
            AOS.init({
                duration: 1000,
                easing: "ease-in-out",
                once: true,
                offset: 120,
                delay: 0,
                anchorPlacement: "top-bottom",
                mirror: false,
                disable: "mobile",
            });
        </script>
        <script>
            document.querySelectorAll('.breed-accordion-header').forEach(btn => {
                btn.addEventListener('click', () => {
                    const item = btn.closest('.breed-accordion-item');
                    const isActive = item.classList.contains('active');
                    document.querySelectorAll('.breed-accordion-item.active').forEach(openItem => {
                        const body = openItem.querySelector('.breed-accordion-body');
                        body.style.maxHeight = body.scrollHeight + 'px';
                        requestAnimationFrame(() => {
                            body.style.transition = 'max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
                            body.style.maxHeight = '0';
                        });
                        openItem.classList.remove('active');
                    });
                    if (!isActive) {
                        const body = item.querySelector('.breed-accordion-body');
                        item.classList.add('active');
                        body.style.maxHeight = '0';
                        requestAnimationFrame(() => {
                            body.style.transition = 'max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
                            body.style.maxHeight = body.scrollHeight + 'px';
                        });
                    }
                });
            });
        </script>
    </body>
</html>