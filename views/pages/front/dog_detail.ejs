    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %>
        <main style="padding-top: 50px;">
            <section class="dog-profile-hero">
                <div class="container">
                    <div class="dog-profile-card" data-aos="fade-up">
                        <div class="dog-profile-image-wrapper">
                            <div class="dog-profile-image">
                                <% let profileImageSrc; if (animal.profile_optimized_image_path) { profileImageSrc = '/uploads/optimized/' + animal.profile_optimized_image_path; } else if (animal.profile_image_path) { profileImageSrc =
                                '/uploads/' + animal.profile_image_path; } else if (animal.optimized_image_path) { profileImageSrc = '/uploads/optimized/' + animal.optimized_image_path; } else if (animal.image_path) { profileImageSrc =
                                '/uploads/' + animal.image_path; } else { profileImageSrc = '/img/placeholder-dog.jpg'; } %>
                                <img src="<%= profileImageSrc %>" alt="<%= animal.balise_alt || animal.name %>" onerror="this.onerror=null; this.src='/img/placeholder-dog.jpg';" />
                                <div class="profile-gender-badge <%= animal.gender === 'Male' ? 'male' : 'female' %>">
                                    <i class="fas <%= animal.gender === 'Male' ? 'fa-mars' : 'fa-venus' %>"></i>
                                </div>
                            </div>
                        </div>
                        <div class="dog-profile-info">
                            <div class="profile-header">
                                <div style="display: flex; align-items: center; gap: 12px; flex-wrap: wrap;">
                                    <h1 class="profile-name" style="margin: 0;"><%= animal.name %></h1>
                                    <% if (animal.retreat === 1) { %>
                                    <span class="badge-retired">
                                        <i class="fas fa-home"></i>
                                        Retraité
                                    </span>
                                    <% } %>
                                </div>
                                <% if (animal.other_names) { %>
                                <p class="profile-other-name"><%= animal.other_names %></p>
                                <% } %>
                            </div>
                            <div class="profile-breed">
                                <i class="fas fa-paw"></i>
                                <a href="/chiens/<%= animal.breed_slug %>"><%= animal.breed_name %></a>
                                <% if (animal.breed_type) { %>
                                <span class="divider">•</span>
                                <span><%= animal.breed_type %></span>
                                <% } %>
                            </div>
                            <div class="profile-details-grid">
                                <% if (animal.birth_date) { const birthDate = new Date(animal.birth_date); const today = new Date(); let age = today.getFullYear() - birthDate.getFullYear(); const monthDiff = today.getMonth() -
                                birthDate.getMonth(); if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) { age--; } %>
                                <div class="detail-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Âge</span>
                                        <span class="detail-value"><%= age %> an<%= age > 1 ? 's' : '' %></span>
                                    </div>
                                </div>
                                <% } %> <% if (animal.color) { %>
                                <div class="detail-item">
                                    <i class="fas fa-palette"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Couleur</span>
                                        <span class="detail-value"><%= animal.color %></span>
                                    </div>
                                </div>
                                <% } %> <% if (animal.eye_color) { %>
                                <div class="detail-item">
                                    <i class="fas fa-eye"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Yeux</span>
                                        <span class="detail-value"><%= animal.eye_color %></span>
                                    </div>
                                </div>
                                <% } %> <% if (animal.register_name) { %>
                                <div class="detail-item">
                                    <i class="fas fa-certificate"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Registre</span>
                                        <span class="detail-value"><%= animal.register_name %></span>
                                    </div>
                                </div>
                                <% } %> <% if (animal.country_name) { %>
                                <div class="detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Origine</span>
                                        <span class="detail-value"><%= animal.country_name %></span>
                                    </div>
                                </div>
                                <% } %> <% if (animal.coat_type) { %>
                                <div class="detail-item">
                                    <i class="fas fa-dog"></i>
                                    <div class="detail-content">
                                        <span class="detail-label">Poil</span>
                                        <span class="detail-value"><%= animal.coat_type %></span>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <% if (animal.open_for_stud === 1 && animal.gender === 'Male' && animal.retreat !== 1) { %>
                            <div class="profile-action">
                                <a href="/contact?animal=<%= animal.slug %>" class="btn-profile-stud">
                                    <i class="fas fa-heart"></i>
                                    <span>Disponible en saillie</span>
                                </a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
            <section class="dog-info-gallery-section">
                <div class="container">
                    <div class="info-gallery-card" data-aos="fade-up">
                        <div class="info-gallery-left">
                            <% if (animal.description_animals) { %>
                            <div class="info-block">
                                <h2 class="info-block-title">
                                    À propos de <%= animal.name %>
                                </h2>
                                <div class="info-block-content description-text">
                                    <%- animal.description_animals %>
                                </div>
                            </div>
                            <% } %> <% if (animal.father_name || animal.mother_name) { %>
                            <div class="info-block">
                                <h3 class="info-block-subtitle">
                                    <i class="fas fa-paw"></i>
                                    Pedigree
                                </h3>
                                <div class="info-block-content">
                                    <% if (animal.father_name) { %>
                                    <div class="pedigree-item">
                                        <i class="fas fa-mars pedigree-icon male"></i>
                                        <div>
                                            <span class="pedigree-label">Père</span>
                                            <span class="pedigree-value"><%= animal.father_name %></span>
                                        </div>
                                    </div>
                                    <% } %> <% if (animal.mother_name) { %>
                                    <div class="pedigree-item">
                                        <i class="fas fa-venus pedigree-icon female"></i>
                                        <div>
                                            <span class="pedigree-label">Mère</span>
                                            <span class="pedigree-value"><%= animal.mother_name %></span>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <% } %> <% if (animal.health_tests) { %>
                            <div class="info-block">
                                <h3 class="info-block-subtitle">
                                    <i class="fas fa-heartbeat"></i>
                                    Tests de Santé
                                </h3>
                                <div class="info-block-content">
                                    <p class="health-text"><%= animal.health_tests %></p>
                                </div>
                            </div>
                            <% } %> 
                            <% if (animal.open_for_stud === 1 && animal.gender === 'Male' && animal.retreat !== 1) { %>
                            <div class="info-block stud-info-block">
                                <div class="info-block-content">
                                    <div class="stud-info-item">
                                        <div class="stud-icon-wrapper">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <div class="stud-details">
                                            <span class="stud-label">Statut</span>
                                            <span class="stud-status">Disponible en saillie</span>
                                        </div>
                                    </div>
                                    <a href="/contact?animal=<%= animal.slug %>" class="btn-contact-stud-improved">
                                        <i class="fas fa-envelope"></i>
                                        <span>Demander une saillie</span>
                                    </a>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <div class="info-gallery-right">
                            <% if (animalImages && animalImages.length > 0) { %>
                            <div class="carousel-wrapper">
                                <div class="swiper mainGallerySwiper">
                                    <div class="swiper-wrapper">
                                        <% animalImages.forEach((image, index) => { let imageSrc; if (image.optimized_image_path) { imageSrc = '/uploads/optimized/' + image.optimized_image_path; } else if (image.image_path) { imageSrc =
                                        '/uploads/' + image.image_path; } else { imageSrc = '/img/placeholder-dog.jpg'; } %>
                                        <div class="swiper-slide">
                                            <a href="<%= imageSrc %>" data-fancybox="dog-gallery" data-caption="<%= image.balise_alt || animal.name %>">
                                                <div class="carousel-image">
                                                    <img src="<%= imageSrc %>" alt="<%= image.balise_alt || animal.name %>" title="<%= image.balise_title || animal.name %>" loading="lazy" />
                                                    <div class="carousel-overlay">
                                                        <i class="fas fa-search-plus"></i>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <% }); %>
                                    </div>
                                    <div class="swiper-button-next carousel-btn-next"></div>
                                    <div class="swiper-button-prev carousel-btn-prev"></div>
                                    <div class="carousel-counter">
                                        <i class="fas fa-camera"></i>
                                        <span class="counter-current">1</span> / <span class="counter-total"><%= animalImages.length %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="thumbnails-grid">
                                <% animalImages.forEach((image, index) => { 
                                    let imageSrc;
                                    if (image.optimized_image_path) {
                                        imageSrc = '/uploads/optimized/' + image.optimized_image_path;
                                    } else if (image.image_path) {
                                        imageSrc = '/uploads/' + image.image_path;
                                    } else {
                                        imageSrc = '/img/placeholder-dog.jpg';
                                    }
                                %>
                                <div class="thumbnail-item" data-index="<%= index %>">
                                    <div class="thumbnail-image">
                                        <img src="<%= imageSrc %>" 
                                            alt="<%= image.balise_alt || animal.name %>"
                                            loading="lazy" />
                                    </div>
                                </div>
                                <% }); %>
                            </div>

                            <% } else { %>
                            <div class="no-images">
                                <i class="fas fa-image"></i>
                                <p>Aucune photo disponible</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Section Pedigree / Généalogie -->
            <% if (father || mother) { %>
            <section class="dog-pedigree-section">
                <div class="container">
                    <div class="pedigree-header" data-aos="fade-up">
                        <h2 class="pedigree-title">
                            <i class="fas fa-sitemap"></i>
                            Arbre Généalogique
                        </h2>
                        <p class="pedigree-subtitle">Découvrez les origines de <%= animal.name %></p>
                    </div>
                        <div class="pedigree-level level-1 mb-2">
                            <div class="pedigree-card <%= father ? '' : 'empty' %>">
                                <% if (father) { %>
                                <div class="pedigree-card-content">
                                    <% if (father.optimized_image_path || father.image_path) { %>
                                    <div class="pedigree-image">
                                        <img src="<%= father.optimized_image_path ? '/uploads/optimized/' + father.optimized_image_path : '/uploads/' + father.image_path %>" 
                                            alt="<%= father.father_name %>" />
                                    </div>
                                    <% } else { %>
                                    <div class="pedigree-badge male">
                                        <i class="fas fa-mars"></i>
                                    </div>
                                    <% } %>
                                    <div class="pedigree-info">
                                        <span class="pedigree-label">Père</span>
                                        <span class="pedigree-name"><%= father.father_name %></span>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="pedigree-card-content">
                                    <span class="pedigree-unknown">Inconnu</span>
                                </div>
                                <% } %>
                            </div>
                            <div class="pedigree-card <%= mother ? '' : 'empty' %>">
                                <% if (mother) { %>
                                <div class="pedigree-card-content">
                                    <% if (mother.optimized_image_path || mother.image_path) { %>
                                    <div class="pedigree-image">
                                        <img src="<%= mother.optimized_image_path ? '/uploads/optimized/' + mother.optimized_image_path : '/uploads/' + mother.image_path %>" 
                                            alt="<%= mother.mother_name %>" />
                                    </div>
                                    <% } else { %>
                                    <div class="pedigree-badge female">
                                        <i class="fas fa-venus"></i>
                                    </div>
                                    <% } %>
                                    <div class="pedigree-info">
                                        <span class="pedigree-label">Mère</span>
                                        <span class="pedigree-name"><%= mother.mother_name %></span>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="pedigree-card-content">
                                    <span class="pedigree-unknown">Inconnue</span>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="pedigree-level level-2">
                        <div class="pedigree-card <%= grandfather ? '' : 'empty' %>">
                            <% if (grandfather) { %>
                            <div class="pedigree-card-content">
                                <% if (grandfather.optimized_image_path || grandfather.image_path) { %>
                                <div class="pedigree-image small">
                                    <img src="<%= grandfather.optimized_image_path ? '/uploads/optimized/' + grandfather.optimized_image_path : '/uploads/' + grandfather.image_path %>" 
                                        alt="<%= grandfather.grandfather_name %>" />
                                </div>
                                <% } else { %>
                                <div class="pedigree-badge male small">
                                    <i class="fas fa-mars"></i>
                                </div>
                                <% } %>
                                <div class="pedigree-info">
                                    <span class="pedigree-label">Grand-père paternel</span>
                                    <span class="pedigree-name small"><%= grandfather.grandfather_name %></span>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="pedigree-card-content">
                                <span class="pedigree-unknown">Inconnu</span>
                            </div>
                            <% } %>
                        </div>
                        <div class="pedigree-card <%= grandmother ? '' : 'empty' %>">
                            <% if (grandmother) { %>
                            <div class="pedigree-card-content">
                                <% if (grandmother.optimized_image_path || grandmother.image_path) { %>
                                <div class="pedigree-image small">
                                    <img src="<%= grandmother.optimized_image_path ? '/uploads/optimized/' + grandmother.optimized_image_path : '/uploads/' + grandmother.image_path %>" 
                                        alt="<%= grandmother.grandmother_name %>" />
                                </div>
                                <% } else { %>
                                <div class="pedigree-badge female small">
                                    <i class="fas fa-venus"></i>
                                </div>
                                <% } %>
                                <div class="pedigree-info">
                                    <span class="pedigree-label">Grand-mère paternelle</span>
                                    <span class="pedigree-name small"><%= grandmother.grandmother_name %></span>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="pedigree-card-content">
                                <span class="pedigree-unknown">Inconnue</span>
                            </div>
                            <% } %>
                        </div>
                        <div class="pedigree-card <%= maternalGrandfather ? '' : 'empty' %>">
                            <% if (maternalGrandfather) { %>
                            <div class="pedigree-card-content">
                                <% if (maternalGrandfather.optimized_image_path || maternalGrandfather.image_path) { %>
                                <div class="pedigree-image small">
                                    <img src="<%= maternalGrandfather.optimized_image_path ? '/uploads/optimized/' + maternalGrandfather.optimized_image_path : '/uploads/' + maternalGrandfather.image_path %>" 
                                        alt="<%= maternalGrandfather.grandfather_name %>" />
                                </div>
                                <% } else { %>
                                <div class="pedigree-badge male small">
                                    <i class="fas fa-mars"></i>
                                </div>
                                <% } %>
                                <div class="pedigree-info">
                                    <span class="pedigree-label">Grand-père maternel</span>
                                    <span class="pedigree-name small"><%= maternalGrandfather.grandfather_name %></span>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="pedigree-card-content">
                                <span class="pedigree-unknown">Inconnu</span>
                            </div>
                            <% } %>
                        </div>
                        <div class="pedigree-card <%= maternalGrandmother ? '' : 'empty' %>">
                            <% if (maternalGrandmother) { %>
                            <div class="pedigree-card-content">
                                <% if (maternalGrandmother.optimized_image_path || maternalGrandmother.image_path) { %>
                                <div class="pedigree-image small">
                                    <img src="<%= maternalGrandmother.optimized_image_path ? '/uploads/optimized/' + maternalGrandmother.optimized_image_path : '/uploads/' + maternalGrandmother.image_path %>" 
                                        alt="<%= maternalGrandmother.grandmother_name %>" />
                                </div>
                                <% } else { %>
                                <div class="pedigree-badge female small">
                                    <i class="fas fa-venus"></i>
                                </div>
                                <% } %>
                                <div class="pedigree-info">
                                    <span class="pedigree-label">Grand-mère maternelle</span>
                                    <span class="pedigree-name small"><%= maternalGrandmother.grandmother_name %></span>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="pedigree-card-content">
                                <span class="pedigree-unknown">Inconnue</span>
                            </div>
                            <% } %>
                        </div>
                        </div>
                    </div>
                </div>
            </section>
            <% } %>
        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
