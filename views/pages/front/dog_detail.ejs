        <script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
        <script src="/front/js/header.js"></script>
        <%- include('./partials/googleAnalytics') %>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,
                easing: "ease-in-out",
                once: true,
                offset: 120,
                delay: 0,
                anchorPlacement: "top-bottom",
                mirror: false,
                disable: "mobile",
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const mainGallerySwiper = new Swiper('.mainGallerySwiper', {
                    spaceBetween: 0,
                    loop: false,
                    navigation: {
                        nextEl: '.carousel-btn-next',
                        prevEl: '.carousel-btn-prev',
                    },
                    on: {
                        slideChange: function () {
                            const currentSlide = document.querySelector('.counter-current');
                            if (currentSlide) {
                                currentSlide.textContent = this.activeIndex + 1;
                            }
                            
                            document.querySelectorAll('.thumbnail-item').forEach(t => t.classList.remove('active'));
                            const activeThumb = document.querySelectorAll('.thumbnail-item')[this.activeIndex];
                            if (activeThumb) {
                                activeThumb.classList.add('active');
                            }
                        }
                    },
                    observer: true,
                    observeParents: true,
                });
                document.querySelectorAll('.thumbnail-item').forEach((thumb, index) => {
                    thumb.addEventListener('click', function() {
                        mainGallerySwiper.slideTo(index);
                    });
                });
                if (document.querySelector('.thumbnail-item')) {
                    document.querySelector('.thumbnail-item').classList.add('active');
                }

                Fancybox.bind('[data-fancybox="dog-gallery"]', {
                    Toolbar: {
                        display: {
                            left: [],
                            middle: [],
                            right: ["close"],
                        },
                    },
                    Images: {
                        zoom: true,
                    },
                    Carousel: {
                        infinite: true,
                    },
                });
            });
        </script>
    </body>
