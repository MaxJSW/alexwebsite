                                        <% if (marriage.marriages_status === 'Programmé') { %>Programmée
                                        <% } else if (marriage.marriages_status === 'En Cours') { %>En cours
                                        <% } else if (marriage.marriages_status === 'Confirmé') { %>Confirmée
                                        <% } else if (marriage.marriages_status === 'Archivé') { %>Archivée
                                        <% } else { %><%= marriage.marriages_status %>
                                        <% } %>
                                    </div>
                                    <div class="marriage-breed-badge">
                                        <i class="fas fa-paw me-1"></i><%= marriage.breed_name %>
                                    </div>
                                </div>
                                <div class="marriage-content-premium">
