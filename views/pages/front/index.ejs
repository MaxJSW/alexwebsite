                                            <div class="marriage-parent-icon">
                                                <i class="fas fa-mars"></i>
                                            </div>
                                            <div>
                                                <span class="marriage-parent-label">Père</span>
                                                <span class="marriage-parent-name"><%= marriage.male_name %></span>
                                            </div>
                                        </div>
                                        <div class="marriage-parent-divider">
                                            <i class="fas fa-times"></i>
                                        </div>
                                        <div class="marriage-parent female">
                                            <div class="marriage-parent-icon">
                                                <i class="fas fa-venus"></i>
                                            </div>
                                            <div>
                                                <span class="marriage-parent-label">Mère</span>
                                                <span class="marriage-parent-name"><%= marriage.female_name %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="marriage-footer">
                                        <div class="marriage-stats-row">
                                            <div class="marriage-stat-item">
