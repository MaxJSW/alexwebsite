    <meta name="geo.region" content="FR-OCC">
    <meta name="geo.placename" content="Occitanie, France">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Élevage de Bel Air">
    <meta property="og:title" content="Nos Chiens à la Retraite - Élevage de Bel Air">
    <meta property="og:description" content="Découvrez nos reproducteurs American Bully et Springer Anglais à la retraite : après des années de service, ils profitent d'une retraite bien méritée.">
