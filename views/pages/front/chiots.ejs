<%- include('../front/partials/head-meta-base.ejs') %>
<%- include('../front/partials/head-fonts-libs.ejs') %>
    <link rel="stylesheet" href="/front/css/navbar.css">
    <link rel="stylesheet" href="/front/css/puppy.css">
</head>
    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %> 
       <main style="padding-top: 70px;">

            <!-- ============================================
                SECTION HERO
            ============================================= -->
            <section class="page-hero-simple">
                <div class="page-hero-overlay"></div>
                <div class="container">
                    <div class="page-hero-content">
                        <h1 class="page-hero-title">Nos Chiots</h1>
                        <p class="page-hero-subtitle">
                            Découvrez nos chiots disponibles à la vente et tous les chiots que nous avons produits avec passion
                        </p>
                    </div>
                </div>
            </section>

            <!-- ============================================
                SECTION 2 BLOCS CHIOTS
            ============================================= -->
            <section class="puppy-cards-section">
                <div class="container">
                    
                    <div class="row g-4">
                        
                        <!-- Bloc Chiots à vendre -->
                        <div class="col-lg-6" data-aos="fade-up">
                            <a href="/chiots/a-vendre" class="puppy-big-card available">
                                <div class="puppy-card-image">
                                    <% if (availablePuppy && availablePuppy.image) { %>
                                        <img src="<%= availablePuppy.image.path %>" 
                                            alt="<%= availablePuppy.image.alt %>"
                                            onerror="this.onerror=null; this.src='/img/placeholder-puppy.jpg';">
                                    <% } else { %>
                                        <img src="/img/placeholder-puppy.jpg" alt="Chiots disponibles">
                                    <% } %>
                                    <div class="puppy-card-overlay"></div>
                                </div>
                                <div class="puppy-card-content">
                                    <div class="puppy-card-icon">
                                        <i class="fas fa-paw"></i>
                                    </div>
                                    <h2 class="puppy-card-title">Chiots à Vendre</h2>
                                    <p class="puppy-card-count"><%= counts.available %> chiot(s) disponible(s)</p>
                                    <span class="puppy-card-btn">
                                        Découvrir
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                </div>
                            </a>
                        </div>

                        <!-- Bloc Chiots produits -->
                        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                            <a href="/chiots/produits" class="puppy-big-card produced">
                                <div class="puppy-card-image">
                                    <% if (soldPuppy && soldPuppy.image) { %>
                                        <img src="<%= soldPuppy.image.path %>" 
                                            alt="<%= soldPuppy.image.alt %>"
                                            onerror="this.onerror=null; this.src='/img/placeholder-puppy.jpg';">
                                    <% } else { %>
                                        <img src="/img/placeholder-puppy.jpg" alt="Chiots produits">
                                    <% } %>
                                    <div class="puppy-card-overlay"></div>
                                </div>
                                <div class="puppy-card-content">
                                    <div class="puppy-card-icon">
                                        <i class="fas fa-heart"></i>
                                    </div>
                                    <h2 class="puppy-card-title">Chiots Produits</h2>
                                    <p class="puppy-card-count"><%= counts.sold %> chiot(s) produit(s)</p>
                                    <span class="puppy-card-btn">
                                        Découvrir
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                </div>
                            </a>
                        </div>

                    </div>

                </div>
            </section>

            

        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="/front/js/header.js"></script>
        <%- include('./partials/googleAnalytics') %>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,         
                easing: 'ease-in-out',   
                once: true,              
                offset: 120,             
                delay: 0,               
                anchorPlacement: 'top-bottom', 
                mirror: false,          
                disable: 'mobile'  
            });
        </script>
    </body>
</html>