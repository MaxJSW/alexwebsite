<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Tous les tags | Blog Spirit of Freedom Kennel</title>
        <meta name="description" content="Parcourez tous les tags du blog de Spirit of Freedom Kennel et trouvez les articles qui vous intéressent." />
        <meta name="keywords" content="tags blog, spirit of freedom kennel, american bully, élevage canin gard, blog élevage, codognan" />
        <meta name="author" content="Spirit of Freedom Kennel" />
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
        <meta name="googlebot" content="index, follow" />
        <link rel="canonical" href="https://spiritoffreedomkennel.com/blog/tags" />
        <meta name="language" content="fr" />
        <meta name="geo.region" content="FR-30" />
        <meta name="geo.placename" content="Codognan, Gard" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Spirit of Freedom Kennel" />
        <meta property="og:title" content="Tous les tags | Blog Spirit of Freedom Kennel" />
        <meta property="og:description" content="Parcourez tous les tags du blog de Spirit of Freedom Kennel et trouvez les articles qui vous intéressent." />
        <meta property="og:url" content="https://spiritoffreedomkennel.com/blog/tags" />
        <meta property="og:image" content="https://spiritoffreedomkennel.com/img/og/og-image.webp" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:locale" content="fr_FR" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="Tous les tags | Blog Spirit of Freedom Kennel" />
        <meta name="twitter:description" content="Parcourez tous les tags du blog de Spirit of Freedom Kennel et trouvez les articles qui vous intéressent." />
        <meta name="twitter:image" content="https://spiritoffreedomkennel.com/img/og/og-image.webp" />
        <%- include('../front/partials/head-meta-base.ejs') %>
        <%- include('../front/partials/head-fonts-libs.ejs') %>
        <link rel="stylesheet" href="/front/css/navbar.css" />
        <link rel="stylesheet" href="/front/css/blog-tags-list.css" />
    </head>
    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %>
        <main style="padding-top: 70px;">
            <div class="blog-breadcrumb-mobile">
                <div class="container">
                    <div class="blog-breadcrumb">
                        <a href="/blog"><i class="fas fa-newspaper me-1"></i>Blog</a>
                        <span class="breadcrumb-sep">›</span>
                        <span><i class="fas fa-tags me-1"></i>Tags</span>
                    </div>
                </div>
            </div>
            <section class="btl-hero">
                <div class="container">
                    <div class="blog-breadcrumb btl-hero-breadcrumb desktop-only">
                        <a href="/blog"><i class="fas fa-newspaper me-1"></i>Blog</a>
                        <span class="breadcrumb-sep">›</span>
                        <span><i class="fas fa-tags me-1"></i>Tags</span>
                    </div>
                    <div class="btl-hero-content" >
                        <div class="btl-hero-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div class="btl-hero-text">
                            <p class="btl-hero-label">Blog</p>
                            <h1 class="btl-hero-title">Tous les tags</h1>
                            <p class="btl-hero-count">
                                <span><%= Object.values(tagsByLetter).flat().length %></span> tag<%= Object.values(tagsByLetter).flat().length > 1 ? 's' : '' %> disponible<%= Object.values(tagsByLetter).flat().length > 1 ? 's' : '' %>
                            </p>
                        </div>
                    </div>
                    <div class="btl-alpha-nav">
                        <% Object.keys(tagsByLetter).forEach(letter => { %>
                        <a href="#letter-<%= letter %>" class="btl-alpha-btn"><%= letter %></a>
                        <% }); %>
                    </div>
                </div>
            </section>
            <section class="btl-content-section">
                <div class="container">
                    <% if (Object.keys(tagsByLetter).length > 0) { %>
                    <% Object.keys(tagsByLetter).forEach(letter => { %>
                    <div class="btl-letter-group" id="letter-<%= letter %>" data-aos="fade-up">
                        <div class="btl-letter-header">
                            <span class="btl-letter"><%= letter %></span>
                            <div class="btl-letter-line"></div>
                        </div>
                        <div class="btl-tags-grid">
                            <% tagsByLetter[letter].forEach((tag, index) => { %>
                            <a href="/blog/tag/<%= tag.tag_slug %>" 
                                class="btl-tag-card" 
                                data-aos="fade-up" 
                                data-aos-delay="<%= index * 30 %>">
                                <div class="btl-tag-card-left">
                                    <span class="btl-tag-card-icon">
                                    <i class="fas fa-tag"></i>
                                    </span>
                                    <span class="btl-tag-card-name"><%= tag.content %></span>
                                </div>
                                <span class="btl-tag-card-count">
                                <%= tag.count %> article<%= tag.count > 1 ? 's' : '' %>
                                </span>
                            </a>
                            <% }); %>
                        </div>
                    </div>
                    <% }); %>
                    <% } else { %>
                    <div class="btl-empty" data-aos="fade-up">
                        <div class="btl-empty-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h2 class="btl-empty-title">Aucun tag disponible</h2>
                        <p class="btl-empty-text">Aucun tag n'a encore été créé.</p>
                        <a href="/blog" class="btl-empty-btn">
                        <i class="fas fa-newspaper me-2"></i>Retour au blog
                        </a>
                    </div>
                    <% } %>
                </div>
            </section>
        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="/front/js/header.js"></script>
        <%- include('./partials/googleAnalytics') %>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,
                easing: "ease-in-out",
                once: true,
                offset: 120,
                delay: 0,
                anchorPlacement: "top-bottom",
                mirror: false,
                disable: "mobile",
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const toggleBtn = document.getElementById("dogFiltersToggle");
                const menu = document.getElementById("dogFiltersMenu");
            
                if (toggleBtn && menu) {
                    toggleBtn.addEventListener("click", function () {
                        menu.classList.toggle("active");
                        toggleBtn.classList.toggle("active");
                    });
                    document.addEventListener("click", function (e) {
                        if (!toggleBtn.contains(e.target) && !menu.contains(e.target)) {
                            menu.classList.remove("active");
                            toggleBtn.classList.remove("active");
                        }
                    });
                }
            });
        </script>
    </body>
</html>