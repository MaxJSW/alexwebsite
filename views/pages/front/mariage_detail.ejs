<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Mariage <%= father.name %> x <%= mother.name %> - <%= father.breed.name %></title>
        <meta name="description" content="<%= marriage.description || 'Découvrez la portée de ' + father.name + ' et ' + mother.name + ', ' + father.breed.name + (father.breed.type ? ' ' + father.breed.type : '') + '. ' + (marriage.totalPuppies || 0) + ' chiot(s) ' + father.breed.name.toLowerCase() + ' issu(s) du Spirit of Freedom Kennel à Codognan, dans le Gard.' %>">
        <meta name="keywords" content="mariage <%= father.breed.name.toLowerCase() %>, portée <%= father.name %> <%= mother.name %>, chiots <%= father.breed.name.toLowerCase() %><% if (father.breed.type) { %> <%= father.breed.type.toLowerCase() %><% } %><% if (father.color) { %>, <%= father.color.toLowerCase() %><% } %><% if (mother.color) { %>, <%= mother.color.toLowerCase() %><% } %>, élevage <%= father.breed.name.toLowerCase() %>, spirit of freedom kennel, chiots ABKC FBKC, élevage canin gard, codognan">
        <meta name="author" content="Spirit of Freedom Kennel">
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
        <meta name="googlebot" content="index, follow">
        <link rel="canonical" href="https://spiritoffreedomkennel.com/mariages/<%= father.breed.slug %>/<%= marriage.slug %>">
        <meta name="language" content="fr">
        <meta name="geo.region" content="FR-30">
        <meta name="geo.placename" content="Codognan, Gard">
        <meta property="og:type" content="article">
        <meta property="og:site_name" content="Spirit of Freedom Kennel">
        <meta property="og:title" content="Mariage <%= father.name %> x <%= mother.name %> | <%= father.breed.name %> - Spirit of Freedom Kennel">
        <meta property="og:description" content="Portée <%= father.breed.name %><% if (father.breed.type) { %> <%= father.breed.type %><% } %> - <%= marriage.totalPuppies || 0 %> chiot(s). Spirit of Freedom Kennel à Codognan, dans le Gard.">
        <meta property="og:url" content="https://spiritoffreedomkennel.com/mariages/<%= father.breed.slug %>/<%= marriage.slug %>">
        <meta property="og:image" content="<%= marriage.image && marriage.image.path ? 'https://spiritoffreedomkennel.com' + marriage.image.path : 'https://spiritoffreedomkennel.com/img/og/og-image.webp' %>">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:image:alt" content="Mariage <%= father.name %> x <%= mother.name %> - <%= father.breed.name %> - Spirit of Freedom Kennel">
        <meta property="og:locale" content="fr_FR">
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="Mariage <%= father.name %> x <%= mother.name %> | Spirit of Freedom Kennel">
        <meta name="twitter:description" content="Portée <%= father.breed.name %><% if (father.breed.type) { %> <%= father.breed.type %><% } %> - <%= marriage.totalPuppies || 0 %> chiot(s). Spirit of Freedom Kennel à Codognan, dans le Gard.">
        <meta name="twitter:image" content="<%= marriage.image && marriage.image.path ? 'https://spiritoffreedomkennel.com' + marriage.image.path : 'https://spiritoffreedomkennel.com/img/og/og-image.webp' %>">
        <meta name="twitter:image:alt" content="<%= father.name %> x <%= mother.name %> - Spirit of Freedom Kennel">
        <%- include('../front/partials/head-meta-base.ejs') %>
        <%- include('../front/partials/head-fonts-libs.ejs') %>
        <link rel="stylesheet" href="/front/css/navbar.css">
        <link rel="stylesheet" href="/front/css/mariages-details.css">
    </head>
    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %>
        <main style="padding-top: 70px;">
            <div class="marriage-breadcrumb-mobile">
                <div class="container">
                    <div class="marriage-breadcrumb">
                        <a href="/mariages"><i class="fas fa-heart me-1"></i>Mariages</a>
                        <span class="breadcrumb-sep">›</span>
                        <a href="/mariages/<%= father.breed.slug %>"><%= father.breed.name %></a>
                        <span class="breadcrumb-sep">›</span>
                        <span><%= father.name %> x <%= mother.name %></span>
                    </div>
                </div>
            </div>
            <section class="marriage-hero-section">
                <div class="container">
                    <div class="marriage-hero-grid">
                        <div class="marriage-hero-left" data-aos="fade-right">
                            <div class="marriage-hero-banner">
                                <% if (marriage.image && marriage.image.path) { %>
                                <img src="<%= marriage.image.path %>"
                                    alt="Mariage <%= father.name %> x <%= mother.name %>"
                                    onerror="this.onerror=null; this.src='/img/placeholder-marriage.webp';">
                                <% } else { %>
                                <div class="marriage-hero-banner-placeholder">
                                    <i class="fas fa-heart"></i>
                                </div>
                                <% } %>
                                <div class="marriage-hero-status-badge <%=
                                    marriage.status === 'in_progress' ? 'status-progress' :
                                    marriage.status === 'planned' ? 'status-planned' : 'status-completed'
                                    %>">
                                    <% if (marriage.status === 'in_progress') { %>
                                    <i class="fas fa-spinner"></i>En cours
                                    <% } else if (marriage.status === 'planned') { %>
                                    <i class="fas fa-calendar"></i>À venir
                                    <% } else { %>
                                    <i class="fas fa-check"></i>Terminé
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="marriage-hero-right" data-aos="fade-left">
                            <div class="marriage-breadcrumb desktop-only">
                                <a href="/mariages"><i class="fas fa-heart me-1"></i>Mariages</a>
                                <span class="breadcrumb-sep">›</span>
                                <a href="/mariages/<%= father.breed.slug %>"><%= father.breed.name %></a>
                                <span class="breadcrumb-sep">›</span>
                                <span><%= father.name %> x <%= mother.name %></span>
                            </div>
                            <div class="marriage-hero-title-row">
                                <h1 class="marriage-hero-title">
                                    <span class="text-gold"><%= father.name %></span>
                                    <span class="marriage-hero-x">×</span>
                                    <span class="text-gold"><%= mother.name %></span>
                                </h1>
                            </div>
                            <div class="marriage-hero-breed">
                                <i class="fas fa-paw"></i>
                                <a href="/mariages/<%= father.breed.slug %>"><%= father.breed.name %></a>
                                <% if (father.breed.type) { %>
                                <span class="marriage-hero-breed-dot">•</span>
                                <span><%= father.breed.type %></span>
                                <% } %>
                            </div>
                            <div class="marriage-hero-stats">
                                <div class="marriage-stat-item">
                                    <div class="marriage-stat-icon">
                                        <i class="fas fa-dog"></i>
                                    </div>
                                    <div class="marriage-stat-content">
                                        <span class="marriage-stat-value"><%= marriage.totalPuppies || 0 %></span>
                                        <span class="marriage-stat-label">Chiots dans la portée</span>
                                    </div>
                                </div>
                                <% if (marriage.availablePuppies > 0) { %>
                                <div class="marriage-stat-item highlight">
                                    <div class="marriage-stat-icon">
                                        <i class="fas fa-paw"></i>
                                    </div>
                                    <div class="marriage-stat-content">
                                        <span class="marriage-stat-value"><%= marriage.availablePuppies %></span>
                                        <span class="marriage-stat-label">Disponible<%= marriage.availablePuppies > 1 ? 's' : '' %></span>
                                    </div>
                                </div>
                                <% } %>
                                <% if (marriage.expectedPuppies) { %>
                                <div class="marriage-stat-item">
                                    <div class="marriage-stat-icon">
                                        <i class="fas fa-list-ol"></i>
                                    </div>
                                    <div class="marriage-stat-content">
                                        <span class="marriage-stat-value"><%= marriage.expectedPuppies %></span>
                                        <span class="marriage-stat-label">Chiots attendus</span>
                                    </div>
                                </div>
                                <% } %>
                                <% if (marriage.birthDate) { %>
                                <div class="marriage-stat-item">
                                    <div class="marriage-stat-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="marriage-stat-content">
                                        <span class="marriage-stat-value"><%= marriage.birthDate %></span>
                                        <span class="marriage-stat-label">Date de naissance</span>
                                    </div>
                                </div>
                                <% } %>
                                <% if (marriage.availableDate) { %>
                                <div class="marriage-stat-item">
                                    <div class="marriage-stat-icon">
                                        <i class="fas fa-home"></i>
                                    </div>
                                    <div class="marriage-stat-content">
                                        <span class="marriage-stat-value"><%= marriage.availableDate %></span>
                                        <span class="marriage-stat-label">Départ en famille</span>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <% if (marriage.description) { %>
                            <div class="marriage-hero-description">
                                <%- marriage.description %>
                            </div>
                            <% } %>
                            <div class="marriage-hero-actions">
                                <% if (marriage.availablePuppies > 0) { %>
                                <a href="#portee" class="btn-marriage-primary">
                                <i class="fas fa-paw me-2"></i>Voir les chiots disponibles
                                </a>
                                <% } %>
                                <a href="/contact" class="btn-marriage-secondary">
                                <i class="fas fa-envelope me-2"></i>Nous contacter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="marriage-parents-section">
                <div class="container">
                    <div class="marriage-section-header" data-aos="fade-up">
                        <span class="label-tag">Reproducteurs</span>
                        <h2 class="marriage-section-title">Les <span class="text-gold">Parents</span></h2>
                    </div>
                    <div class="marriage-parents-grid">
                        <div class="marriage-parent-card" data-aos="fade-right">
                            <div class="marriage-parent-card-image">
                                <% if (father.image && father.image.path) { %>
                                <img src="<%= father.image.path %>"
                                    alt="<%= father.image.alt || father.name %>"
                                    onerror="this.onerror=null; this.src='/img/placeholder-dog.webp';">
                                <% } else { %>
                                <div class="marriage-parent-placeholder male">
                                    <i class="fas fa-mars"></i>
                                </div>
                                <% } %>
                                <div class="marriage-parent-gender-badge male">
                                    <i class="fas fa-mars"></i>
                                </div>
                                <div class="marriage-parent-role-badge">Père</div>
                            </div>
                            <div class="marriage-parent-card-body">
                                <div class="dog-card-top-bar"></div>
                                <h3 class="marriage-parent-name">
                                    <% if (father.slug) { %>
                                    <a href="/chiens/<%= father.breed.slug %>/<%= father.slug %>"><%= father.name %></a>
                                    <% } else { %>
                                    <%= father.name %>
                                    <% } %>
                                </h3>
                                <div class="marriage-parent-breed">
                                    <i class="fas fa-paw"></i>
                                    <span><%= father.breed.name %><% if (father.breed.type) { %> · <%= father.breed.type %><% } %></span>
                                </div>
                                <div class="marriage-parent-info">
                                    <% if (father.color) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-palette"></i>
                                        <span><%= father.color %></span>
                                    </div>
                                    <% } %>
                                    <% if (father.eyeColor) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-eye"></i>
                                        <span><%= father.eyeColor %></span>
                                    </div>
                                    <% } %>
                                    <% if (father.coatType) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-cut"></i>
                                        <span><%= father.coatType %></span>
                                    </div>
                                    <% } %>
                                    <% if (father.register) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-certificate"></i>
                                        <span><%= father.register %></span>
                                    </div>
                                    <% } %>
                                    <% if (father.country) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span><%= father.country %></span>
                                    </div>
                                    <% } %>
                                </div>
                                <% if (father.slug) { %>
                                <a href="/chiens/<%= father.breed.slug %>/<%= father.slug %>" class="btn-view-dog-card">
                                Voir le profil <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                        <div class="marriage-parents-separator" data-aos="fade-up">
                            <div class="marriage-parents-sep-line"></div>
                            <div class="marriage-parents-sep-icon">
                                <i class="fas fa-times"></i>
                            </div>
                            <div class="marriage-parents-sep-line"></div>
                        </div>
                        <div class="marriage-parent-card" data-aos="fade-left">
                            <div class="marriage-parent-card-image">
                                <% if (mother.image && mother.image.path) { %>
                                <img src="<%= mother.image.path %>"
                                    alt="<%= mother.image.alt || mother.name %>"
                                    onerror="this.onerror=null; this.src='/img/placeholder-dog.webp';">
                                <% } else { %>
                                <div class="marriage-parent-placeholder female">
                                    <i class="fas fa-venus"></i>
                                </div>
                                <% } %>
                                <div class="marriage-parent-gender-badge female">
                                    <i class="fas fa-venus"></i>
                                </div>
                                <div class="marriage-parent-role-badge">Mère</div>
                            </div>
                            <div class="marriage-parent-card-body">
                                <div class="dog-card-top-bar"></div>
                                <h3 class="marriage-parent-name">
                                    <% if (mother.slug) { %>
                                    <a href="/chiens/<%= mother.breed.slug %>/<%= mother.slug %>"><%= mother.name %></a>
                                    <% } else { %>
                                    <%= mother.name %>
                                    <% } %>
                                </h3>
                                <div class="marriage-parent-breed">
                                    <i class="fas fa-paw"></i>
                                    <span><%= mother.breed.name %><% if (mother.breed.type) { %> · <%= mother.breed.type %><% } %></span>
                                </div>
                                <div class="marriage-parent-info">
                                    <% if (mother.color) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-palette"></i>
                                        <span><%= mother.color %></span>
                                    </div>
                                    <% } %>
                                    <% if (mother.eyeColor) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-eye"></i>
                                        <span><%= mother.eyeColor %></span>
                                    </div>
                                    <% } %>
                                    <% if (mother.coatType) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-cut"></i>
                                        <span><%= mother.coatType %></span>
                                    </div>
                                    <% } %>
                                    <% if (mother.register) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-certificate"></i>
                                        <span><%= mother.register %></span>
                                    </div>
                                    <% } %>
                                    <% if (mother.country) { %>
                                    <div class="marriage-parent-info-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span><%= mother.country %></span>
                                    </div>
                                    <% } %>
                                </div>
                                <% if (mother.slug) { %>
                                <a href="/chiens/<%= mother.breed.slug %>/<%= mother.slug %>" class="btn-view-dog-card">
                                Voir le profil <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="marriage-puppies-section" id="portee">
                <div class="container">
                    <div class="marriage-section-header" data-aos="fade-up">
                        <span class="label-tag">Portée</span>
                        <h2 class="marriage-section-title">Les <span class="text-gold">Chiots</span></h2>
                    </div>
                    <% if (puppies && puppies.length > 0) { %>
                    <div class="breed-section-header" data-aos="fade-up">
                        <div class="breed-section-header-left">
                            <span class="marriage-puppies-subtitle"><%= father.name %> × <%= mother.name %></span>
                        </div>
                        <div class="breed-gallery-counter">
                            <span class="counter-number"><%= puppies.length %></span>
                            <span class="counter-label">chiot<%= puppies.length > 1 ? 's' : '' %></span>
                        </div>
                    </div>
                    <div class="row g-4">
                        <% puppies.forEach((puppy, index) => { %>
                        <%
                            let puppyStatusClass = '';
                            switch (puppy.saleStatus) {
                                case 'for_sale':
                                case 'available_for_reservation':
                                    puppyStatusClass = 'available';
                                    break;
                                case 'in_reservation':
                                    puppyStatusClass = 'in-reservation';
                                    break;
                                case 'reserved':
                                    puppyStatusClass = 'reserved';
                                    break;
                                case 'sold':
                                    puppyStatusClass = 'sold';
                                    break;
                            }
                            
                            const puppyUrl = (puppy.saleStatus === 'sold')
                                ? `/chiots/produits/${puppy.breed.slug}/${puppy.slug}`
                                : `/chiots/a-vendre/${puppy.breed.slug}/${puppy.slug}`;
                            %>
                        <div class="col-xl-3 col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="<%= index * 50 %>">
                            <article class="dog-card marriage-puppy-card">
                                <div class="dog-card-image">
                                    <a href="<%= puppyUrl %>">
                                    <img src="<%= puppy.image.path %>"
                                        alt="<%= puppy.image.alt || puppy.name %>"
                                        onerror="this.onerror=null; this.src='/img/placeholder-dog.webp';">
                                    </a>
                                    <div class="dog-gender-badge <%= puppy.gender === 'Male' ? 'male' : 'female' %>">
                                        <i class="fas <%= puppy.gender === 'Male' ? 'fa-mars' : 'fa-venus' %>"></i>
                                    </div>
                                    <div class="marriage-puppy-status-badge <%= puppyStatusClass %>">
                                        <% if (puppyStatusClass === 'available') { %>
                                        <i class="fas fa-check-circle"></i><%= puppy.status %>
                                        <% } else if (puppyStatusClass === 'in-reservation') { %>
                                        <i class="fas fa-clock"></i><%= puppy.status %>
                                        <% } else if (puppyStatusClass === 'reserved') { %>
                                        <i class="fas fa-lock"></i><%= puppy.status %>
                                        <% } else { %>
                                        <i class="fas fa-times-circle"></i><%= puppy.status %>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="dog-card-body">
                                    <div class="dog-card-top-bar"></div>
                                    <h3 class="dog-card-name">
                                        <a href="<%= puppyUrl %>"><%= puppy.name %></a>
                                    </h3>
                                    <div class="dog-card-race">
                                        <i class="fas fa-paw"></i>
                                        <span><%= puppy.breed.name %><% if (puppy.breed.type) { %> · <%= puppy.breed.type %><% } %></span>
                                    </div>
                                    <div class="dog-card-info">
                                        <% if (puppy.color) { %>
                                        <div class="dog-info-item">
                                            <i class="fas fa-palette"></i>
                                            <span><%= puppy.color %></span>
                                        </div>
                                        <% } %>
                                        <% if (puppy.eyeColor) { %>
                                        <div class="dog-info-item">
                                            <i class="fas fa-eye"></i>
                                            <span><%= puppy.eyeColor %></span>
                                        </div>
                                        <% } %>
                                    </div>
                                    <a href="<%= puppyUrl %>" class="btn-view-dog-card">
                                    Voir le profil <i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </article>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-5" data-aos="fade-up">
                        <div class="no-dogs-message">
                            <i class="fas fa-paw fa-3x mb-4" style="color: rgba(201,168,76,0.3)"></i>
                            <h3>Aucun chiot disponible</h3>
                            <p>Les chiots de cette portée ne sont pas encore en ligne</p>
                            <a href="/contact" class="btn-back-dogs">
                            <i class="fas fa-envelope me-2"></i>Nous contacter
                            </a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </section>
            <section class="dog-cta-section">
                <div class="container">
                    <div class="dog-cta-box" data-aos="fade-up">
                        <div class="dog-cta-left">
                            <span class="label-tag">Intéressé ?</span>
                            <h2 class="dog-cta-title">Un chiot de cette <span class="text-gold">portée vous intéresse ?</span></h2>
                            <p class="dog-cta-text">Contactez-nous pour en savoir plus sur les chiots disponibles, les conditions d'adoption et nos prochaines portées.</p>
                        </div>
                        <div class="dog-cta-right">
                            <a href="/mariages" class="btn-dog-cta-secondary">
                            <i class="fas fa-heart me-2"></i>Voir tous les mariages
                            </a>
                            <a href="/contact" class="btn-dog-cta-primary">
                            <i class="fas fa-envelope me-2"></i>Nous contacter
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="/front/js/header.js"></script>
        <%- include('./partials/googleAnalytics') %>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,
                easing: "ease-in-out",
                once: true,
                offset: 120,
                delay: 0,
                anchorPlacement: "top-bottom",
                mirror: false,
                disable: "mobile",
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const toggleBtn = document.getElementById("dogFiltersToggle");
                const menu = document.getElementById("dogFiltersMenu");
            
                if (toggleBtn && menu) {
                    toggleBtn.addEventListener("click", function () {
                        menu.classList.toggle("active");
                        toggleBtn.classList.toggle("active");
                    });
                    document.addEventListener("click", function (e) {
                        if (!toggleBtn.contains(e.target) && !menu.contains(e.target)) {
                            menu.classList.remove("active");
                            toggleBtn.classList.remove("active");
                        }
                    });
                }
            });
        </script>
    </body>
</html>