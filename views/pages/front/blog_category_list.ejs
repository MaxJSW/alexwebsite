<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>Toutes les catégories | Blog Spirit of Freedom Kennel</title>
        <meta name="description" content="Parcourez toutes les catégories du blog de Spirit of Freedom Kennel : élevage, santé, éducation, races et bien plus encore." />
        <meta name="keywords" content="catégories blog, spirit of freedom kennel, american bully, élevage canin gard, blog élevage, codognan" />
        <meta name="author" content="Spirit of Freedom Kennel" />
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
        <meta name="googlebot" content="index, follow" />
        <link rel="canonical" href="https://spiritoffreedomkennel.com/blog/categories" />
        <meta name="language" content="fr" />
        <meta name="geo.region" content="FR-30" />
        <meta name="geo.placename" content="Codognan, Gard" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Spirit of Freedom Kennel" />
        <meta property="og:title" content="Toutes les catégories | Blog Spirit of Freedom Kennel" />
        <meta property="og:description" content="Parcourez toutes les catégories du blog de Spirit of Freedom Kennel : élevage, santé, éducation, races et bien plus encore." />
        <meta property="og:url" content="https://spiritoffreedomkennel.com/blog/categories" />
        <meta property="og:image" content="https://spiritoffreedomkennel.com/img/og/og-image.webp" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:locale" content="fr_FR" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="Toutes les catégories | Blog Spirit of Freedom Kennel" />
        <meta name="twitter:description" content="Parcourez toutes les catégories du blog de Spirit of Freedom Kennel." />
        <meta name="twitter:image" content="https://spiritoffreedomkennel.com/img/og/og-image.webp" />
        <%- include('../front/partials/head-meta-base.ejs') %>
        <%- include('../front/partials/head-fonts-libs.ejs') %>
        <link rel="stylesheet" href="/front/css/navbar.css" />
        <link rel="stylesheet" href="/front/css/blog-category-list.css" />
    </head>
    <body class="h-100">
        <%- include('../front/frontEndAssets/header') %>
        <main style="padding-top: 70px;">
            <div class="blog-breadcrumb-mobile">
                <div class="container">
                    <div class="blog-breadcrumb">
                        <a href="/blog"><i class="fas fa-newspaper me-1"></i>Blog</a>
                        <span class="breadcrumb-sep">›</span>
                        <span><i class="fas fa-folder me-1"></i>Catégories</span>
                    </div>
                </div>
            </div>
            <section class="bcl-hero">
                <div class="container">
                    <div class="blog-breadcrumb bcl-hero-breadcrumb desktop-only">
                        <a href="/blog"><i class="fas fa-newspaper me-1"></i>Blog</a>
                        <span class="breadcrumb-sep">›</span>
                        <span><i class="fas fa-folder me-1"></i>Catégories</span>
                    </div>
                    <div class="bcl-hero-content" >
                        <div class="bcl-hero-icon">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <div class="bcl-hero-text">
                            <p class="bcl-hero-label">Blog</p>
                            <h1 class="bcl-hero-title">Toutes les catégories</h1>
                            <p class="bcl-hero-count">
                                <span><%= Object.values(categoriesByLetter).flat().length %></span> catégorie<%= Object.values(categoriesByLetter).flat().length > 1 ? 's' : '' %> disponible<%= Object.values(categoriesByLetter).flat().length > 1 ? 's' : '' %>
                            </p>
                        </div>
                    </div>
                    <div class="bcl-alpha-nav">
                        <% Object.keys(categoriesByLetter).forEach(letter => { %>
                        <a href="#letter-<%= letter %>" class="bcl-alpha-btn"><%= letter %></a>
                        <% }); %>
                    </div>
                </div>
            </section>
            <section class="bcl-content-section">
                <div class="container">
                    <% if (Object.keys(categoriesByLetter).length > 0) { %>
                    <% Object.keys(categoriesByLetter).forEach(letter => { %>
                    <div class="bcl-letter-group" id="letter-<%= letter %>" data-aos="fade-up">
                        <div class="bcl-letter-header">
                            <span class="bcl-letter"><%= letter %></span>
                            <div class="bcl-letter-line"></div>
                        </div>
                        <div class="bcl-categories-grid">
                            <% categoriesByLetter[letter].forEach((category, index) => { %>
                            <div class="bcl-category-card" data-aos="fade-up" data-aos-delay="<%= index * 50 %>">
                                <div class="bcl-category-card-header">
                                    <div class="bcl-category-card-icon">
                                        <i class="fas fa-folder-open"></i>
                                    </div>
                                    <div class="bcl-category-card-info">
                                        <h2 class="bcl-category-card-title">
                                            <a href="/blog/categorie/<%= category.category_slug %>">
                                            <%= category.content %>
                                            </a>
                                        </h2>
                                        <span class="bcl-category-card-count">
                                        <%= category.count %> article<%= category.count > 1 ? 's' : '' %>
                                        </span>
                                    </div>
                                    <a href="/blog/categorie/<%= category.category_slug %>" class="bcl-category-card-btn">
                                    <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                                <% if (category.latestBlogs && category.latestBlogs.length > 0) { %>
                                <div class="bcl-category-card-posts">
                                    <% category.latestBlogs.forEach(post => { %>
                                    <%
                                        let postImageSrc;
                                        if (post.optimized_image_path) {
                                            postImageSrc = '/uploads/optimized/' + post.optimized_image_path;
                                        } else if (post.image_path) {
                                            postImageSrc = '/uploads/' + post.image_path;
                                        } else {
                                            postImageSrc = '/img/placeholder-blog.webp';
                                        }
                                        const postDate = new Date(post.date_creation).toLocaleDateString('fr-FR', {
                                            day: 'numeric',
                                            month: 'short',
                                            year: 'numeric'
                                        });
                                        %>
                                    <a href="/blog/<%= post.slug %>" class="bcl-post-item">
                                        <div class="bcl-post-image">
                                            <img src="<%= postImageSrc %>"
                                                alt="<%= post.balise_alt || post.titre %>"
                                                onerror="this.onerror=null; this.src='/img/placeholder-blog.webp';">
                                        </div>
                                        <div class="bcl-post-info">
                                            <span class="bcl-post-date">
                                            <i class="fas fa-calendar-alt"></i><%= postDate %>
                                            </span>
                                            <h3 class="bcl-post-title"><%= post.titre %></h3>
                                        </div>
                                    </a>
                                    <% }); %>
                                </div>
                                <% } %>
                                <div class="bcl-category-card-footer">
                                    <a href="/blog/categorie/<%= category.category_slug %>" class="bcl-category-card-link">
                                    Voir tous les articles <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                    <% }); %>
                    <% } else { %>
                    <div class="bcl-empty" data-aos="fade-up">
                        <div class="bcl-empty-icon">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <h2 class="bcl-empty-title">Aucune catégorie disponible</h2>
                        <p class="bcl-empty-text">Aucune catégorie n'a encore été créée.</p>
                        <a href="/blog" class="bcl-empty-btn">
                        <i class="fas fa-newspaper me-2"></i>Retour au blog
                        </a>
                    </div>
                    <% } %>
                </div>
            </section>
        </main>
        <%- include('../front/frontEndAssets/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="/front/js/header.js"></script>
        <%- include('./partials/googleAnalytics') %>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,
                easing: "ease-in-out",
                once: true,
                offset: 120,
                delay: 0,
                anchorPlacement: "top-bottom",
                mirror: false,
                disable: "mobile",
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const toggleBtn = document.getElementById("dogFiltersToggle");
                const menu = document.getElementById("dogFiltersMenu");
            
                if (toggleBtn && menu) {
                    toggleBtn.addEventListener("click", function () {
                        menu.classList.toggle("active");
                        toggleBtn.classList.toggle("active");
                    });
                    document.addEventListener("click", function (e) {
                        if (!toggleBtn.contains(e.target) && !menu.contains(e.target)) {
                            menu.classList.remove("active");
                            toggleBtn.classList.remove("active");
                        }
                    });
                }
            });
        </script>
    </body>
</html>