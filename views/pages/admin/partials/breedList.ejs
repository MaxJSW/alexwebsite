<% if (breeds.length > 0) { %>
    <% breeds.forEach(breed => { %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mb-4">
            <div class="h-100 p-4 bg-body-tertiary border rounded-3 position-relative shadow-sm">
                <span id="badge-<%= breed.id %>" class="badge <%= breed.is_online ? 'bg-success' : 'bg-secondary' %> position-absolute top-0 end-0 m-2">
                    <%= breed.is_online ? 'En Ligne' : 'En Cours' %>
                </span>
                <h5 class="text-primary-breed"><i class="bi bi-file-earmark-text me-2"></i>Nom de la race:</h5>
                <h5 class="mb-3"><%= breed.name %></h5>
                <h6 class="text-secondary"><i class="bi bi-card-text me-2"></i>Description</h6>
                <p class="mb-3"><%= breed.description ? breed.description.substring(0, 150) : 'En attente de Description' %>...</p>
                <div class="d-flex flex-column">
                    <div class="mb-3">
                        <small class="text-primary-breed">
                            <i class="bi bi-pencil-square me-1 pb-2"></i>
                            Dernière modification : <%= breed.formatted_date_modification ? breed.formatted_date_modification : 'Race non modifiée' %>
                        </small>
                        <div class="form-check form-switch mt-1">
                            <input class="form-check-input" type="checkbox" id="switchOnline<%= breed.id %>" <%= breed.is_online === 1 ? 'checked disabled' : '' %>>
                            <label class="form-check-label" for="switchOnline<%= breed.id %>">Mettre en ligne</label>
                        </div>
                    </div>
                    <div class="d-flex flex-column gap-2 flex-md-row justify-content-md-end">
                        <button class="btn btn-primary edit-breed-button " data-id="<%= breed.id %>" data-is-online="<%= breed.is_online %>">Modifier</button>
                        <button class="btn btn-primary add-photo-button " data-id="<%= breed.id %>">Gestion des photos</button>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
<% } else { %>
    <div class="alert alert-primary" role="alert">
        Aucun article trouvé.
    </div>
<% } %>
