<% animals.forEach(animal => { %>
    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 animal-item" data-name="<%= animal.name.toLowerCase() %>">
        <div class="card shadow-sm">
            <div class="bd-placeholder-img card-img-top" style="width:100%; height:225px; background-color:#55595c; color:#eceeef; display:flex; align-items:center; justify-content:center;">
                <% if (animal.image_path) { %>
                    <img src="/uploads/<%= animal.image_path %>" alt="<%= animal.name %>" style="width:100%; height:420px; object-fit:cover;">
                <% } else { %>
                    <span>Aucune photo disponible</span>
                <% } %>
            </div>
            <div class="card-body">
                <span class="card-name-animals"><%= animal.name %></span>
                <p class="card-text mt-3">
                    <%= animal.description_animals.length > 100 ? animal.description_animals.substring(0, 125) + '...' : animal.description_animals %>
                </p>
                <small class="text-body-secondary d-flex align-items-baseline">
                    <%= animal.gender %>
                    <% if (animal.gender === 'Male') { %>
                      <i class="bi bi-gender-male text-primary ms-1" style="margin-top: -2px;"></i>
                    <% } else if (animal.gender === 'Femelle') { %>
                      <i class="bi bi-gender-female ms-1" style="margin-top: -2px;"></i>
                    <% } %>
                  </small>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="btn-group">
                        <a href="/admin/animalProfile/<%= animal.slug %>" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        <a href="/admin/animalProfile/<%= animal.slug %>#password-tab-pane" class="btn btn-sm btn-outline-secondary pt-2">GÃ©rer les Photos</a>
                    </div>
                    <small class="<%= animal.is_online ? 'status-online' : 'status-offline' %>">
                        <%= animal.is_online ? 'En Ligne' : 'Hors-Ligne' %>
                    </small>
                </div>
            </div>
        </div>
    </div>
<% }) %>

