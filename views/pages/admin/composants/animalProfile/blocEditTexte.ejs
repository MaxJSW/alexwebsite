<div class="tab-pane fade" id="text-tab-pane" role="tabpanel" aria-labelledby="text-tab" tabindex="0">
    <form id="textForm">
        <input type="hidden" name="animalId" id="animalIdInput" value="<%= animal.id %>">
        <label for="description_id" class=" mt-2">Description</label>
        <div class="form-floating mb-3 mt-1">
            <textarea class="form-control" placeholder="Description" id="descriptionTextarea" name="description_animals" style="height: 350px"><%= animal.description_animals %></textarea>
        </div>
        <label for="health_tests_id" class=" mt-3">Test(s) de Santé</label>
        <div class="form-floating mb-3 mt-1">
            <textarea class="form-control" placeholder="Test de Santé" id="healthTestsTextarea" name="health_tests" style="height: 150px"><%= animal.health_tests %></textarea>
        </div>
        <div class="row">
            <div id="successMessageText" class="alert alert-success mt-3" role="alert" style="display: none;">
                Mise à jour des textes réussie
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-primary" id="saveTextsButton">Enregistrer</button>
            </div>
        </div>
    </form>
</div>