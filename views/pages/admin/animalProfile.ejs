<!doctype html>
<html lang="fr" data-bs-theme="auto">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex">
        <meta name="robots" content="noindex, nofollow">
        <title>Profil</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://kit.fontawesome.com/1365cc5822.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/admin/css/dashboard.css">
        <link rel="stylesheet" href="/admin/css/sidebar.css">
        <link rel="stylesheet" href="/admin/css/dashboard-modern.css">
        <script src="/admin/js/themes/darkThemeFunction.js"></script>
    </head>
    <body>
        <%- include('../admin/composants/header') %>
        <%- include('../admin/composants/topBar') %>
        <main>
            <section class="bg-body-tertiary py-3 py-md-5 py-xl-8">
                <div class="container">
                    <div class="row gy-4 gy-lg-0">
                        <div class="col-12 col-lg-4 col-xl-3">
                            <div class="row gy-4">
                                <div class="col-12">
                                    <!-- card fiche profil start -->
                                    <%- include('../admin/composants/animalProfile/ficheProfileBloc') %>
                                    <!-- card fiche profil end -->
                                   
                                    <!-- block mots clefs -->
                                    <%- include('../admin/composants/animalProfile/blocKeyWords') %>
                                    <!-- block mots clefs -->
                                    <!-- block intercalaires -->
                                    <%- include('../admin/composants/animalProfile/blockIntercalaires') %>
                                    <!-- end block intercalaires -->
                                    <!-- block infos profile -->
                                    <%- include('../admin/composants/animalProfile/profileInfosElements') %>
                                    <!-- block infos profile -->
                                </div>
                            </div>
                            <!-- end block infos profile -->
                            <!-- block edit profile -->
                            <!-- Profile Image Section -->
                            <%- include('../admin/composants/animalProfile/imageProfileSection') %>
                            <%- include('../admin/composants/animalProfile/profileIsOnline') %>
                        </div>
                        <!-- </div>
                            </div> -->
                        <!-- End Profile Image Section -->
                        <!-- start form -->
                        <%- include('../admin/composants/animalProfile/updateForm') %>
                        <!-- form end -->
                    </div>
                </div>
                </div>
                <!-- block genealogy start -->
                <div class="tab-pane fade" id="email-tab-pane" role="tabpanel" aria-labelledby="email-tab" tabindex="0">
                <span>Généalogie de <%= animal.name %> (Largeur 350 px - Hauteur 250px)</span>
                <!-- <form action="#!"> -->
                <div class="row">
                    <!-- Colonne 1: Chien 1 -->
                    <%- include('../admin/composants/animalProfile/blocGenealogy') %>
                    <!-- div de cloture genealogy(!important) -->
                </div>
                <!-- div de cloture (!important) -->
                <!-- block genealogy end -->
                <!-- edit text and description start -->
                <%- include('../admin/composants/animalProfile/blocEditTexte') %>
                <!-- end edit text and description start -->
                <!-- block upload photos start -->
                <div class="tab-pane fade" id="password-tab-pane" role="tabpanel" aria-labelledby="password-tab" tabindex="0">
                <%- include('../admin/composants/animalProfile/uploadsPhotosBloc') %>
                <!-- block upload photos end -->
                </div>
                <div class="tab-pane fade" id="results-tab-pane" role="tabpanel" aria-labelledby="results-tab" tabindex="0">
                    <%- include('../admin/composants/animalProfile/results') %>

            </section>
        </main>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="/admin/js/forms/animalProfilFunction.js"></script>
        <script src="/admin/js/genealogy/genealogyFunction.js"></script>
        <script src="/admin/js/utilities/titleFunction.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
        <script>
            const animalSlug = "<%= animal.slug %>";
            const animalId = "<%= animal.id %>";
        </script>
        <%- include('../admin/composants/animalProfile/animalProfileModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/fatherModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/motherModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/paternalGrandFatherModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/paternalGrandMotherModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/maternalGrandFatherModal') %>
        <%- include('../admin/composants/animalProfile/genealogyModal/maternalGrandMotherModal') %>
        <!-- Modal de Crop d'image -->
        <div class="modal fade" id="cropModal" tabindex="-1" aria-labelledby="cropModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cropModalLabel">
                            <i class="bi bi-crop me-2"></i>Recadrer votre photo
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center mb-3">
                            <small class="text-muted">Format : 400x400 pixels (carré)</small>
                        </div>
                        <!-- Container pour l'image à cropper -->
                        <div class="img-container">
                            <img id="cropImage" style="max-width: 100%;">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-2"></i>Annuler
                        </button>
                        <button type="button" class="btn btn-primary" id="cropAndUploadBtn">
                            <i class="bi bi-check-circle me-2"></i>Valider et envoyer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
